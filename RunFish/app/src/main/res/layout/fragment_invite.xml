                            app:layout_constraintBottom_toBottomOf="@+id/text_friend3"
                            app:layout_constraintEnd_toStartOf="@+id/text_friend3" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/description_image_grey_ball"/>
                    <ImageView
                            android:src="@drawable/bola_verde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/image_green_ball"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/text_friend" android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@+id/text_friend"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend" android:layout_marginTop="8dp"
                            android:contentDescription="@string/description_image_green_ball"/>
                    <Button
                            android:text="@string/invite"
