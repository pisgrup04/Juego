                            android:layout_height="41dp" android:id="@+id/button_friend3"
                            android:background="@drawable/fusta"
                            app:layout_constraintStart_toEndOf="@+id/text_friend3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.589" style="@style/MistralStyle"
                            app:layout_constraintTop_toTopOf="@+id/text_friend3" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend3"/>
                    <Button
                            android:text="@string/invite"
                            android:layout_width="115dp"
                            android:layout_height="41dp" android:id="@+id/button_friend2"
                            android:background="@drawable/fusta"
                            app:layout_constraintStart_toEndOf="@+id/text_friend2"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.586"
                            style="@style/MistralStyle" app:layout_constraintTop_toTopOf="@+id/text_friend2"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend2"/>
                    <Button
                            android:text="@string/invite"
                            android:layout_width="115dp"
                            android:layout_height="40dp" android:id="@+id/button_friend"
                            app:layout_constraintTop_toTopOf="@+id/text_friend"
                            app:layout_constraintStart_toEndOf="@+id/text_friend1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.583"
                            android:background="@drawable/fusta_animation" style="@style/MistralStyle"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend"/>
                    <Button
                            android:text="@string/invite"
                            android:layout_width="115dp"
                            android:layout_height="40dp" android:id="@+id/button_friend1"
                            android:background="@drawable/fusta"
                            app:layout_constraintStart_toEndOf="@+id/text_friend1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.589" style="@style/MistralStyle"
                            app:layout_constraintTop_toTopOf="@+id/text_friend1"
                            app:layout_constraintBottom_toBottomOf="@+id/text_friend1"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" android:id="@+id/text_friend3"
                            style="@style/MistralStyle"
                            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_friend2"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" android:id="@+id/text_friend2"
                            style="@style/MistralStyle"
                            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_friend1"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" android:id="@+id/text_friend1"
                            style="@style/MistralStyle"
                            android:layout_marginStart="60dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/text_friend"/>
                    <TextView
                            android:text="@string/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" android:id="@+id/text_friend"
                            style="@style/MistralStyle"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"/>
