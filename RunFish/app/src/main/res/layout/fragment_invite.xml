                            app:layout_constraintEnd_toStartOf="@+id/text_friend2" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/description_image_green_ball"/>
