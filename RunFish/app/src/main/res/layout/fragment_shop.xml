<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".shopFragment" android:background="@drawable/fons"
                                             android:id="@+id/frameLayout2">
    <TextView
            android:text="@string/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_shop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:background="@drawable/tablon"
            android:paddingTop="20dp"
            android:textAlignment="center" style="@style/MistralStyle"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comeback_shop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/flecha_animation_izq"/>
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="296dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_shop"
            app:layout_constraintBottom_toTopOf="@+id/button_comeback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="422dp"
                    android:layout_height="226dp"
                    android:background="@drawable/tablon_grande"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="50dp"
                    android:id="@+id/tablon_common_fish">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="300dp"
                        android:layout_height="140dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/marge_tablon"
                        app:layout_constraintHorizontal_bias="0.504"
                        app:layout_constraintVertical_bias="0.563">

                    <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_height="10dp"
                            android:id="@+id/speed_bar_common_fish"
                            android:max="100"
                            android:progress="30"
                            android:progressDrawable="@drawable/speed_bar"
                            android:background="@android:color/background_light"
                            app:layout_constraintStart_toStartOf="@+id/capactity_bar_common_fish"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/capactity_bar_common_fish"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"/>
                    <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_height="10dp"
                            android:id="@+id/capactity_bar_common_fish"
                            android:max="100"
                            android:progress="30"
                            android:progressDrawable="@drawable/capacity_bar"
                            app:layout_constraintTop_toBottomOf="@+id/life_bar_common_fish"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="24dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/life_bar_common_fish"
                            android:background="@android:color/background_light"
                            android:layout_marginEnd="8dp"/>
                    <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_height="10dp"
                            android:id="@+id/life_bar_common_fish"
                            app:layout_constraintTop_toBottomOf="@+id/text_common_fish"
                            app:layout_constraintStart_toEndOf="@+id/text_life"
                            android:max="100"
                            android:progress="20"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="12dp"
                            android:progressDrawable="@drawable/life_bar"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.822"
                            android:background="@android:color/background_light"/>
                    <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/button_ability_common_fish"
                            android:background="@drawable/salud"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/text_common_fish"
                            android:layout_marginStart="8dp"/>
                    <ImageView
                            android:src="@drawable/placton"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/image_plankton1"
                            app:layout_constraintStart_toEndOf="@+id/text_preu_common_fish"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/image_common_fish"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="@string/description_image_plankton"/>
                    <ImageView
                            android:src="@drawable/pez_comun"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/image_common_fish"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:contentDescription="@string/description_image_fish"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_preu_common_fish"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/image_common_fish"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="@string/preu_common_fish" style="@style/MistralStyle"/>
                    <TextView
                            android:text="@string/common_fish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_common_fish"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/image_common_fish"
                            android:layout_marginStart="24dp" style="@style/MistralStyle"/>
                    <TextView
                            android:text="@string/life"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_life"
                            style="@style/MistralBarStyle"
                            app:layout_constraintTop_toBottomOf="@+id/text_common_fish"
                            app:layout_constraintStart_toStartOf="@+id/text_common_fish"/>
                    <TextView
                            android:text="@string/capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_capacity"
                            style="@style/MistralBarStyle"
                            app:layout_constraintTop_toBottomOf="@+id/text_life"
                            app:layout_constraintStart_toStartOf="@+id/text_common_fish"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_speed1"
                            android:text="@string/speed"
                            app:layout_constraintTop_toBottomOf="@+id/text_capacity"
                            app:layout_constraintStart_toStartOf="@+id/text_common_fish"
                            style="@style/MistralBarStyle"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>