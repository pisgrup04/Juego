<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".options" android:id="@+id/constraintLayout"
                                             android:background="@drawable/fons">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comeback_options" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/flecha_izq"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="496dp"
            android:layout_height="318dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/tablon_grande"
            android:id="@+id/layoutTablon">

        <Button
                android:layout_width="73dp"
                android:layout_height="41dp" android:id="@+id/button_lenguage2"
                android:background="@drawable/bandera_uk" app:layout_constraintStart_toEndOf="@+id/button_lenguage1"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/switch_vibration" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintVertical_bias="0.148"/>
        <Button
                android:layout_width="65dp"
                android:layout_height="37dp" android:id="@+id/button_lenguage1"
                android:background="@drawable/bandera_catalunya"
                app:layout_constraintStart_toEndOf="@+id/text_view_language" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switch_vibration"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.046" app:layout_constraintVertical_bias="0.206"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp" android:id="@+id/button_logOut"
                android:background="@drawable/logout"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_lenguage2"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.206"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/switch_vibration"
                app:layout_constraintVertical_bias="0.163"/>
        <TextView
                android:text="@string/musica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_view_musica"
                style="@style/MistralStyle" android:layout_marginTop="68dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.2"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="@string/sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_view_sounds"
                style="@style/MistralStyle" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_musica" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.202"/>
        <TextView
                android:text="@string/vibracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_view_vibration"
                style="@style/MistralStyle" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_sounds"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.212"/>
        <TextView
                android:text="@string/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/text_view_language"
                style="@style/MistralStyle" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_vibration"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.214"/>
        <SeekBar
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:id="@+id/seekBar_musica"
                android:progress="50"
                android:thumbTint="@color/colorBarraSlide1"
                android:progressTint="@color/colorBarraSlide2"
                style="@style/Widget.AppCompat.SeekBar"
                app:layout_constraintStart_toEndOf="@+id/text_view_musica" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintVertical_bias="0.225"/>
        <SeekBar
                android:layout_width="188dp"
                android:layout_height="36dp"
                android:id="@+id/seekBar_sounds"
                android:progress="50"
                android:thumbTint="@color/colorBarraSlide1"
                android:progressTint="@color/colorBarraSlide2"
                style="@style/Widget.AppCompat.SeekBar"
                app:layout_constraintStart_toEndOf="@+id/text_view_sounds" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_musica" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintVertical_bias="0.0"/>
        <Switch
                android:layout_width="51dp"
                android:layout_height="33dp"
                android:id="@+id/switch_vibration"
                app:layout_constraintStart_toEndOf="@+id/text_view_vibration"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.617"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.008"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="@string/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_options" android:background="@drawable/tablon"
            android:paddingTop="20dp" style="@style/MistralStyle"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>