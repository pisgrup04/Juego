<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".FishFragment"
                                             android:background="@drawable/fons">
    <android.support.constraint.ConstraintLayout
            android:layout_width="311dp"
            android:layout_height="216dp"
            android:background="@drawable/tablon_grande"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tablon_common_fish"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="242dp"
                android:layout_height="140dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/marge_tablon"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintVertical_bias="0.563">

            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:id="@+id/speed_bar_selected_fish"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/speed_bar"
                    android:background="@android:color/background_light"
                    app:layout_constraintStart_toStartOf="@+id/capactity_bar_selected_fish"
                    app:layout_constraintTop_toBottomOf="@+id/capactity_bar_selected_fish"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginEnd="8dp"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:id="@+id/capactity_bar_selected_fish"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/capacity_bar"
                    android:background="@android:color/background_light"
                    app:layout_constraintStart_toStartOf="@+id/life_bar_selected_fish"
                    app:layout_constraintTop_toBottomOf="@+id/life_bar_selected_fish"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:id="@+id/life_bar_selected_fish"
                    app:layout_constraintStart_toEndOf="@+id/text_life"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginStart="12dp"
                    android:progressDrawable="@drawable/life_bar"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.822"
                    android:background="@android:color/background_light"
                    app:layout_constraintTop_toBottomOf="@+id/text_selected_fish"
                    android:layout_marginTop="12dp"/>
            <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_ability_selected_fish"
                    android:background="@drawable/salud"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
            />
            <TextView
                    android:text="@string/life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_life"
                    style="@style/MistralBarStyle"
                    app:layout_constraintTop_toBottomOf="@+id/text_selected_fish"
                    app:layout_constraintStart_toStartOf="@+id/text_selected_fish"/>
            <TextView
                    android:text="@string/capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_capacity"
                    style="@style/MistralBarStyle"
                    app:layout_constraintTop_toBottomOf="@+id/text_life"
                    app:layout_constraintStart_toStartOf="@+id/text_selected_fish"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_speed"
                    android:text="@string/speed"
                    app:layout_constraintTop_toBottomOf="@+id/text_capacity"
                    style="@style/MistralBarStyle"
                    app:layout_constraintStart_toStartOf="@+id/text_selected_fish"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_selected_fish"
                    android:hint="@string/select_a_fish"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    style="@style/MistralStyle"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comeback"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/flecha_animation_izq"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_fish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" style="@style/MistralStyle"
            android:background="@drawable/tablon"
            android:paddingTop="20dp"
            android:textAlignment="center"/>
    <Button
            android:layout_width="54dp"
            android:layout_height="35dp"
            android:id="@+id/button_clownfish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.807"
            app:layout_constraintVertical_bias="0.726"
            android:background="@drawable/anemone"/>
    <Button
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/button_blowfish"
            android:background="@drawable/pez_globo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintVertical_bias="0.228"/>
    <Button
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:id="@+id/button_common_fish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintVertical_bias="0.325"
            android:background="@drawable/pez_comun"/>
    <Button
            android:layout_width="231dp"
            android:layout_height="128dp"
            android:id="@+id/button_shark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintVertical_bias="0.575"
            android:background="@drawable/tiburon"
    />
</android.support.constraint.ConstraintLayout>